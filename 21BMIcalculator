print ("Hi. Today we will check if your weight is good and you are healthy.")

def BMIcalculator():
  print ("Enter your weight in kilograms: ")
  weight = int(input(" "))
  
  print ("Enter your height in centimeters: ")
  height = int(input(" "))
  
  bmi = weight / ((height/100) ** 2)
  
  if bmi < 18.5:
    print (round(bmi, 2))
    print ("You are underweight! If you have a problems with eating go to specialist. It is dangerous!")
  elif bmi >= 18.5 and bmi < 25:
    print (round(bmi, 2))
    print ("Your weight is correct. You don't have to change your way of eating.")
  elif bmi >= 25 and bmi < 30:
    print (round(bmi, 2))
    print ("You are overweight! Be careful because if you won`t change your way of eating you will be obese. It won`t be good for your health and look.")
  elif bmi >= 30:
    print (round(bmi, 2))
    print ("Obesity... is one of the leading preventable causes of death worldwide... You have to start taking care of yourself. ")
    
    
BMIcalculator()
    
